<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client" xmlns:g="http://www.w3.org/1999/html"
        >
    <ui:style>
        .northPanel {
            padding: 0px;
            margin: 10px;
        }

        .widgetPanel {
            padding: 5px;
            margin: 5px;
        }

        .tableKeyName {
            font-weight: bolder;
        }

        .cellTable {
            border-bottom: 1px solid #ccc;
            text-align: left;
            margin-bottom: 4px;
            outline: none;
        }

        .rowNorth {
            /*padding-bottom: 10px;*/
            /*padding-top: 10px;*/
            margin-bottom: 40px;
        }

    </ui:style>
    <gwt:SplitLayoutPanel ui:field="layoutPanel">
        <gwt:north size="90">
            <b:Container fluid="true" styleName="{style.northPanel}">
                <b:Row styleName="{style.rowNorth}">
                    <b:Column size="MD_2">
                        <gwt:HTML>
                            <b>Folding</b>
                        </gwt:HTML>
                    </b:Column>
                    <b:Column size="MD_2">
                        <b:ListBox ui:field="foldType"/>
                    </b:Column>
                    <b:Column size="MD_2">
                        <gwt:HTML>Padding</gwt:HTML>
                    </b:Column>
                    <b:Column size="MD_2">
                        <b:TextBox ui:field="foldPadding"/>
                    </b:Column>
                </b:Row>
                <b:Row styleName="{style.rowNorth}">
                    <b:Column size="MD_2">
                        <gwt:HTML>Reference</gwt:HTML>
                    </b:Column>
                    <b:Column size="MD_6">
                        <b:TextBox ui:field="referenceTrack" enabled="false"/>
                    </b:Column>
                    <!--<b:Column size="MD_4" styleName="{style.widgetPanel}">-->
                    <!--<b:TextBox placeholder="Search" width="300px" ui:field="nameSearchBox"/>-->
                    <!--</b:Column>-->
                </b:Row>
            </b:Container>
        </gwt:north>
        <gwt:center>
            <cellview:DataGrid ui:field="dataGrid" styleName="{style.cellTable}"/>
        </gwt:center>
        <gwt:south size="200">
            <gwt:DockLayoutPanel>
                <gwt:north size="35">
                    <b:ButtonGroup>
                        <b:Button text="Merge" icon="LOCATION_ARROW" enabled="false" ui:field="mergeButton"/>
                        <b:Button text="Copy" icon="COPY"  enabled="false" ui:field="copyButton"/>
                        <b:Button text="Delete" icon="REMOVE"  enabled="false"  ui:field="removeButton"/>
                        <b:Button text="Apply" icon="SAVE"  enabled="false"  ui:field="applyButton"/>
                    </b:ButtonGroup>
                </gwt:north>
                <gwt:center>
                    <gwt:HTML>Drag and Drop manual</gwt:HTML>
                </gwt:center>
            </gwt:DockLayoutPanel>
        </gwt:south>

    </gwt:SplitLayoutPanel>
</ui:UiBinder>